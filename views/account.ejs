<%- include('navbar') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Conta</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #ffffff;
            margin: 0;
            padding: 0;
        }
        .logo-text span:last-child {
            color: #3cc66a;
        }
        .form-container {
            max-width: 400px;
            margin: 100px auto 40px;
            display: flex;
            flex-direction: column;
        }
        label {
            margin-top: 20px;
            font-size: 14px;
        }
        .input-group {
            position: relative;
        }
        input[type="text"], input[type="email"], input[type="password"], input[type="tel"] {
            width: 100%;
            padding: 10px 35px 10px 10px;
            border: none;
            border-radius: 20px;
            background-color: #c8e0f1;
        }
        .save-btn {
            margin-top: 30px;
            padding: 10px;
            background-color: #1f73b7;
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            cursor: pointer;
        }
    </style>
</head>
<body>
<div class="main-content" style="margin-left: 0;"></div>
<div class="form-container">
    <form action="/save" method="POST">
        <label for="name">Name</label>
        <div class="input-group">
            <input type="text" id="name" name="name" value="<%= global.user.NMUSER %> " required />
        </div>
        <label for="email">E-mail</label>
        <div class="input-group">
            <input type="email" id="email" name="email" value="<%= global.user.EMAIL %>" required />
        </div>
        <label for="password">Password</label>
        <div class="input-group">
            <input type="password" id="password" name="password" value="<%= global.user.PASSWORD %>" required />
        </div>
        <label for="cellphone">Cellphone</label>
        <div class="input-group">
            <input type="tel" id="cellphone" name="cellphone" pattern="[0-9]{10,11}" value="<%= global.user.CELLPHONE ?? '' %>" />
        </div>
        <button type="submit" class="save-btn">Save</button>
    </form>
</div>
</body>
</html>