<%- include('navbar') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Account</title>
    <link rel="stylesheet" href="/stylesheets/home.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #ffffff;
            margin: 0;
            padding: 0;
        }
        .header {
            display: flex;
            align-items: center;
            padding: 15px;
        }
        .menu-icon {
            font-size: 24px;
            margin-right: 10px;
            cursor: pointer;
        }
        .header-title {
            font-weight: bold;
            font-size: 18px;
        }
        .logo-text span:last-child {
            color: #3cc66a;
        }
        .form-container {
            max-width: 400px;
            margin: 40px auto;
            display: flex;
            flex-direction: column;
        }
        label {
            margin-top: 20px;
            font-size: 14px;
        }
        .input-group {
            position: relative;
        }
        input[type="text"], input[type="email"], input[type="password"], input[type="tel"] {
            width: 100%;
            padding: 10px 35px 10px 10px;
            border: none;
            border-radius: 20px;
            background-color: #c8e0f1;
        }
        .edit-icon {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
        }
        .save-btn {
            margin-top: 30px;
            padding: 10px;
            background-color: #1f73b7;
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            cursor: pointer;
        }
    </style>
</head>
<body>
<div class="navbar">
    <div class="main-content" style="margin-left: 0;"></div>
    <div class="logo">
        <img src="/images/logo.png" alt="Our logomark"/>
    </div>
</div>

<div class="form-container">
    <form action="/save-account" method="POST">
        <label for="name">Name</label>
        <div class="input-group">
            <input type="text" id="name" name="name" value="<%= user.name %>" />
            <span class="edit-icon">✎</span>
        </div>

        <label for="email">E-mail</label>
        <div class="input-group">
            <input type="email" id="email" name="email" value="<%= user.email %>" />
            <span class="edit-icon">✎</span>
        </div>

        <label for="password">Password</label>
        <div class="input-group">
            <input type="password" id="password" name="password" value="<%= user.password %>" />
            <span class="edit-icon">✎</span>
        </div>

        <label for="cellphone">Cellphone</label>
        <div class="input-group">
            <input type="tel" id="cellphone" name="cellphone" value="<%= user.cellphone %>" />
            <span class="edit-icon">✎</span>
        </div>

        <button type="submit" class="save-btn">Save</button>
    </form>
</div>
</body>
</html>
