<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>HealthSync - Home</title>
    <link rel="stylesheet" href="/stylesheets/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
<div class="container">
    <div class="navbar">
        <div><i class="fas fa-bars"></i> <strong>Home</strong></div>
        <div class="logo">
            <img src="/images/logo.png" alt="Our logomark"/>
        </div>
    </div>

    <div class="content">
        <!-- Pending Medications -->
        <div class="section pending">
            <h2>Pending medications</h2>
            <% pendingMeds.forEach(med => { %>
                <div class="medication">
                    <i class="fas fa-pills"></i>
                    <span><%= med.name %> - <%= med.date %> - <%= med.time %></span>
                </div>
            <% }) %>
        </div>

        <!-- Scheduled Medications -->
        <div class="section scheduled">
            <h2>Your scheduled medications</h2>
            <% scheduledMeds.forEach(med => { %>
                <div class="medication">
                    <i class="fas fa-clock"></i>
                    <span><%= med.name %> - <%= med.date %> - <%= med.time %></span>
                </div>
            <% }) %>
            <div class="pagination">
                <span class="active">1</span>
                <span>2</span>
                <span>3</span>
            </div>
        </div>
    </div>
</div>
</body>
</html>
